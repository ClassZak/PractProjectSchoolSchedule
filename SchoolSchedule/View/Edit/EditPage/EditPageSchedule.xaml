<Page x:Class="SchoolSchedule.View.Edit.EditPage.EditPageSchedule"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:SchoolSchedule.View.Edit.EditPage"
	  xmlns:Model="clr-namespace:SchoolSchedule.Model"
	  xmlns:Additional="clr-namespace:SchoolSchedule.Additional"
	  mc:Ignorable="d" 
		FontFamily="Arial"
		FontSize="12"
	  d:DesignHeight="300" d:DesignWidth="420"
	  xmlns:EditViewModel="clr-namespace:SchoolSchedule.ViewModel.Edit">
	<Page.DataContext>
		<EditViewModel:EditScheduleViewModel/>
	</Page.DataContext>
	<Page.Resources>
		<Additional:TimeSpanToStringConverter x:Key="TimeConverter"/>
	</Page.Resources>
	<Grid>
		<StackPanel Margin="10">
			<TextBlock Text="День недели"/>
			<ComboBox
				ToolTip="Кабинет для занятий"
				SelectedValue="{Binding CurrentSchedule.DayOfTheWeek}"
				SelectedValuePath="Tag"
			>
				<ComboBoxItem Tag="1">Понедельник</ComboBoxItem>
				<ComboBoxItem Tag="2">Вторник</ComboBoxItem>
				<ComboBoxItem Tag="3">Среда</ComboBoxItem>
				<ComboBoxItem Tag="4">Четверг</ComboBoxItem>
				<ComboBoxItem Tag="5">Пятница</ComboBoxItem>
				<ComboBoxItem Tag="6">Суббота</ComboBoxItem>
				<ComboBoxItem Tag="7">Воскресенье</ComboBoxItem>
			</ComboBox>
			<TextBlock Text="Предмет" Margin="0,10,0,0"/>
			<ComboBox ItemsSource="{Binding Subjects}" 
				SelectedValuePath="Id"
				SelectedValue="{Binding CurrentSchedule.IdSubject}"
				ToolTip="Шаблоное занятие"
			/>
			<TextBlock Text="Класс" Margin="0,10,0,0"/>
			<ComboBox ItemsSource="{Binding Groups}" 
				SelectedValuePath="Id"
				SelectedValue="{Binding CurrentSchedule.IdGroup}"
				ToolTip="Шаблоное занятие"
			/>
			<TextBlock Text="Учитель" Margin="0,10,0,0"/>
			<ComboBox ItemsSource="{Binding Teachers}" 
				SelectedValuePath="Id"
				SelectedValue="{Binding CurrentSchedule.IdTeacher}"
				ToolTip="Преподаватель на занятии"
			/>
			<TextBlock Text="Расписание звонков" Margin="0,10,0,0"/>
			<ComboBox ItemsSource="{Binding BellSchedules}" 
				SelectedValuePath="Id"
				SelectedValue="{Binding CurrentSchedule.IdBellSchedule}"
				ToolTip="Преподаватель на занятии"
			/>
			<TextBlock Text="Кабинет" Margin="0,10,0,0"/>
			<TextBox Text="{Binding CurrentSchedule.ClassRoom}" 
				ToolTip="Кабинет для занятий"
				PreviewTextInput="NumberTextBox_PreviewTextInput"
			/>
		</StackPanel>
	</Grid>
</Page>
