<Page x:Class="SchoolSchedule.View.Edit.EditPage.EditPageGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolSchedule.View.Edit.EditPage"
      xmlns:Model="clr-namespace:SchoolSchedule.Model"
      mc:Ignorable="d" 
      d:DesignHeight="135" d:DesignWidth="300"
      Title="EditPageSubject">
	<Page.DataContext>
		<Model:Group/>
	</Page.DataContext>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<StackPanel Margin="20">
			<TextBlock Text="Год обучения"/>
			<TextBox Text="{Binding Year}" PreviewTextInput="NumberTextBox_PreviewTextInput"/>
		</StackPanel>
		<StackPanel Margin="20" Grid.Column="1">
			<TextBlock Text="Группа"/>
			<TextBox Text="{Binding Name}" PreviewTextInput="RussianTextBox_PreviewTextInput"/>
		</StackPanel>
	</Grid>
</Page>
