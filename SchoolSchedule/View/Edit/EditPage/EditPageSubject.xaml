<Page x:Class="SchoolSchedule.View.Edit.EditPage.EditPageSubject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolSchedule.View.Edit.EditPage"
      xmlns:Model="clr-namespace:SchoolSchedule.Model"
      mc:Ignorable="d" 
      d:DesignHeight="135" d:DesignWidth="320">
	<Page.DataContext>
		<Model:Subject/>
	</Page.DataContext>
	<Grid>
		<StackPanel>
			<TextBlock Text="Название"/>
			<TextBox Text="{Binding Name}" PreviewTextInput="RussianTextBox_PreviewTextInput"/>
		</StackPanel>
	</Grid>
</Page>
