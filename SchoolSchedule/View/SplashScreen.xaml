<Window x:Class="SchoolSchedule.View.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolSchedule.View"
        mc:Ignorable="d"
		FontFamily="Arial"
		WindowStartupLocation="CenterScreen"
        Title="Школьное расписание" Height="450" Width="800">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.6,0" SpreadMethod="Pad">
			<LinearGradientBrush.Transform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="29.055"/>
					<TranslateTransform/>
				</TransformGroup>
			</LinearGradientBrush.Transform>
			<GradientStop Color="AntiqueWhite"/>
			<GradientStop Color="White" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
	<Grid>
		<TextBlock 
            Text="Школьное расписание"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="36"
            TextWrapping="Wrap">
			<TextBlock.Foreground>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0.165"/>
					<GradientStop Color="#FF043E10" Offset="1"/>
				</LinearGradientBrush>
			</TextBlock.Foreground>
		</TextBlock>
		<Image Source="/View/mshtcasu.png" Stretch="UniformToFill" Width="148" Height="148" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>
		<Image Source="/View/scheduleicon.png" Stretch="UniformToFill" Width="148" Height="148" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
		<Image Source="/View/apple.png" Stretch="UniformToFill" Width="50" Height="50" Margin="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
	</Grid>
</Window>
